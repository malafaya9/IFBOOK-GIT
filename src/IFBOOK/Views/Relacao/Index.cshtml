@model IEnumerable<IFBOOK.Models.ProfessorDisciplina>

@{
    ViewData["Title"] = "Relacionamentos";
}

<h2>Relacionamentos</h2>

<p>
    <a asp-action="Create" class="ifbook-button">Cadastrar novo Relacionamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Disciplina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(model => item.Disciplina.Nome)</td>
            <td>@Html.DisplayFor(model => item.Professor.Nome)</td>
            <td>
                @{ var idItem = $"{item.ProfessorID}@{item.DisciplinaID}"; }
                <a asp-action="Delete" asp-route-id="@idItem" class="glyphicon glyphicon-remove ifbook-green"></a>
            </td>
        </tr>
}
    </tbody>
</table>
